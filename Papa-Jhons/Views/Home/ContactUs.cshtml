<section id="about">
    <div class="container-fluid px-3 px-sm-5">
        <div class="row">
            <div class="col-2">
                <div class="text__menu">
                    <h3 class="text__menu-title ">About Us</h3>

                    <a asp-controller="home" asp-action="aboutus" class="text__menu-tab  ">
                        <span>Papa John's</span>
                    </a>

                    <a asp-controller="home" asp-action="contactus" class="text__menu-tab activetab">
                        <span>Contact Us</span>
                    </a>
                    <a asp-controller="home" asp-action="faq" class="text__menu-tab ">
                        <span>Faq</span>
                    </a>

                    <a hasp-controller="home" asp-action="rules" class="text__menu-tab">
                        <span>Papa Talk - Terms and Conditions</span>
                    </a>
                </div>
            </div>
            <div class="col-10">
                <div class="contact-form">
                    <div class="form">
                        <form asp-action="ContactUs">
                            <div class="row">
                                <h1>Contact Us</h1>
                                <div class="input-wrapper">
                                    <div class="form-group">
                                        <label>
                                            Name
                                            <span class="text-danger">*</span>
                                        </label>
                                        <input type="text" name="name" />
                                    </div>
                                </div>
                                <div class="input-wrapper">
                                    <div class="form-group">
                                        <label>
                                            Email Address
                                            <span class="text-danger">*</span>
                                        </label>
                                        <input type="email" name="email" />
                                    </div>
                                </div>
                                <div class="input-wrapper">
                                    <div class="form-group">
                                        <label>
                                            Phone number
                                            <span class="text-danger">*</span>
                                        </label>
                                        <input type="tel" name="phoneNumber" />
                                    </div>
                                </div>
                                <div class="input-wrapper">
                                    <div class="form-group">
                                        <label>
                                            Comment
                                            <span class="text-danger">*</span>
                                        </label>
                                        <textarea name="comment" cols="30" rows="10"></textarea>
                                    </div>
                                </div>
                            </div>
                            <button class="btn contact-btn">Send</button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>