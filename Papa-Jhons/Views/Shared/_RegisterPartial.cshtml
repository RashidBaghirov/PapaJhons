@model RegisterVM
<form asp-controller="account" asp-action="register" >
    <div class="form-imput-item">
        <input asp-for=Firstname placeholder="Your Name" required>
        <span asp-validation-for="Firstname"></span>

    </div>
    <div class="form-imput-item">
        <input asp-for=Lastname placeholder="Your Surname" required>
        <span asp-validation-for="Lastname"></span>

    </div>
    <div class="form-imput-item">
        <input asp-for=Username placeholder="Your Username" required>
        <span asp-validation-for="Username"></span>

    </div>
    <div class="form-imput-item">
        <input asp-for="Email" placeholder="Your email" required>
        <span asp-validation-for="Email"></span>
        
    </div>
    <div class="form-imput-item">
        <input asp-for=Password placeholder="Password" required>
        <span asp-validation-for="Password"></span>

    </div>
    <div class="form-imput-item">
        <input asp-for=ConfirmPassword placeholder="Confirm Password" required>
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
    <div class="form-imput-item">
        <input asp-for="Terms" required>
        <span>Accepted Registration</span>
        <span asp-validation-for="Terms"></span>
    </div>
    <button type="submit">SIGN UP</button>
</form>